//link to product by converting the title to a slug
.product
  = link_to '/product/' + product.title.parameterize + '/'
    .product-image
      = image_tag product.image
    .product-content
      .title
       h3
       b = product.title

       br

      .id
        h10 = product.id.to_s

        br 

      .collection
       h10 = product.collection

        br

        
      .price
        p 
          - currency = data.settings.units.currency || 'â‚¬' 
          = currency + product.price.to_s 
      .weight
        p 
          - weight = data.settings.units.weight || 'kg'
          = product.weight.to_s + weight
